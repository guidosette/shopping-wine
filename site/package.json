{
  "name": "site",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "init-project": "npm run deploy-rules && npm run deploy-index && npm run deploy-rules-storage && npm install --global replace-in-files-cli",
    "pull-index": "type nul > firestore.indexes.json && firebase firestore:indexes >> firestore.indexes.json",
    "deploy-rules": "firebase deploy --only firestore:rules -P default",
    "replace-rules-temp": "replace-in-files --string='firestore.rules' --regex='/g' --replacement='firestore_temp.rules' firebase.json",
    "deploy-rules-temp": "npm run replace-rules-temp && npm run deploy-rules",
    "replace-rules-prod": "replace-in-files --string='firestore_temp.rules' --regex='/g' --replacement='firestore.rules' firebase.json",
    "deploy-rules-prod": "npm run replace-rules-prod && npm run deploy-rules",
    "deploy-rules-storage": "firebase deploy --only storage -P default",
    "deploy-site": "./script_site.sh",
    "deploy-site-w": "script_site.bat",
    "serve-site": "firebase serve --host 0.0.0.0",
    "update-submodule": "git submodule foreach 'git checkout master && git pull'",
    "update-all": "git pull && git submodule init && git submodule update && git submodule foreach 'git fetch origin; git checkout master; git pull'",
    "dev:ssr": "ng run site:serve-ssr",
    "serve:ssr": "node dist/site/server/main.js",
    "build:ssr": "ng build && ng run site:server",
    "prerender": "ng run site:prerender",
    "prerender-demo": "ng run site:prerender --configuration demo",
    "list-routes": "node ./list-routes.js",
    "prerender2": "npm run list-routes && ng run site:prerender --routes-file routes.txt",
    "prerender-complete": "npm run deploy-rules-temp && npm run list-routes && npm run prerender && npm run deploy-rules-prod",
    "deploy-site-prerender": "npm run deploy-rules-temp && npm run list-routes && npm run prerender && firebase deploy --only hosting && npm run deploy-rules-prod",
    "deploy-site-prerender-demo": "npm run list-routes && npm run prerender-demo && firebase deploy --only hosting -P demo",
    "deploy-site-prerender-all": "npm run deploy-site-prerender-demo && npm run deploy-site-prerender",
    "deploy-site-prerender-test": "npm run prerender && firebase hosting:channel:deploy default",
    "download-schematics": "gsutil cp gs://lp-start-kit.appspot.com/schematics/pa-backoffice-schematics-1.0.0.tgz . && npm i pa-backoffice-schematics-1.0.0.tgz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/cdk": "^14.2.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/fire": "^7.4.1",
    "@angular/flex-layout": "^14.0.0-beta.40",
    "@angular/forms": "^14.0.0",
    "@angular/material": "^14.2.0",
    "@angular/material-moment-adapter": "^14.2.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/platform-server": "^14.0.0",
    "@angular/router": "^14.0.0",
    "@bespunky/angular-zen": "^3.1.0",
    "@ckeditor/ckeditor5-angular": "^4.0.0",
    "@ckeditor/ckeditor5-build-classic": "^35.1.0",
    "@fortawesome/angular-fontawesome": "^0.11.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@nguniversal/express-engine": "^14.1.0",
    "angular-google-tag-manager": "^1.6.1",
    "animate.css": "^4.1.1",
    "aos": "^2.3.4",
    "axios": "^0.27.2",
    "bootstrap": "^5.2.0",
    "domino": "^2.1.6",
    "express": "^4.15.2",
    "file-saver-es": "^2.0.5",
    "firebase": "^9.13.0",
    "firebase-functions": "^3.23.0",
    "moment": "^2.29.4",
    "ng-recaptcha": "^10.0.0",
    "ngx-color-picker": "^12.0.1",
    "ngx-cookie-service": "^14.0.1",
    "ngx-mat-select-search": "^4.2.1",
    "ngx-owl-carousel-o": "^14.0.1",
    "ngx-quicklink": "^0.3.0",
    "rxfire": "^6.0.3",
    "rxjs": "~7.5.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular/cli": "~14.2.1",
    "@angular/compiler-cli": "^14.0.0",
    "@nguniversal/builders": "^14.1.0",
    "@types/aos": "^3.0.4",
    "@types/ckeditor__ckeditor5-build-classic": "^29.0.1",
    "@types/express": "^4.17.0",
    "@types/file-saver-es": "^2.0.1",
    "@types/jasmine": "~4.0.0",
    "@types/node": "^14.15.0",
    "git-describe": "^4.0.4",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "tslib": "^2.4.0",
    "typescript": "~4.7.2"
  }
}
